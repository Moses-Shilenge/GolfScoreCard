                @Html.DisplayFor(modelItem => item.OUT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HandiCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NET)
            </td>
            <td style="width:126px">
                @Html.ActionLink("Edit", "EditCard", new { id = item.Id }) | @Html.ActionLink("Delete", "DeleteCard", new { id = item.Id })
            </td>
        </tr>
