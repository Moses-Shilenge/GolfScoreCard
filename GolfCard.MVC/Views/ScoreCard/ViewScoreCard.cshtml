    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player, new { @class = "nameTextColumn" })
            </td>
            @foreach (var modelitem in item.Hole.Take(9))
                {
                <td>
                    @Html.DisplayFor(m => modelitem)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.IN_1)
            </td>
            @foreach (var modelitem in item.Hole.Skip(9).Take(9))
                {
                <td>
                    @Html.DisplayFor(m => modelitem)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.IN_2)
            </td>
