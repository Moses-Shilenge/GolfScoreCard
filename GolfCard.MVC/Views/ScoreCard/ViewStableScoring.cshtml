        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player, new { @class = "nameTextColumn" })
            </td>
             @foreach (var modelitem in item.Hole.Take(9))
                {
                <td>
                    @Html.DisplayFor(m => modelitem)
                </td>
            }
