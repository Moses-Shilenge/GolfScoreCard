                @Html.ActionLink("Edit", "EditCard", new { Id = item.Id }) | @Html.ActionLink("Delete", "DeleteCard", new { Id = item.Id })
            </td>
        </tr>
        <tr>
            <td>
                Stableford points
            </td>
            @foreach (var modelitem in item.Points.Take(9))
                {
                <td>
                    @Html.DisplayFor(m => modelitem)
                </td>

                inPoints += modelitem;
            }
            <td>
                @inPoints
            </td>
            @foreach (var modelitem in item.Points.Skip(9).Take(9))
